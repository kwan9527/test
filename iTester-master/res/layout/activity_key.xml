<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/checkBox_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Power"
                android:textSize="30dp"
                android:clickable="false" />

            <CheckBox
                android:id="@+id/checkBox_v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume+"
                android:textSize="30dp"
                android:clickable="false" />

            <CheckBox
                android:id="@+id/checkBox_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume-"
                android:textSize="30dp"
                android:clickable="false" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" >

        <Button
            android:id="@+id/button_fail"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_style_2"
            android:textSize="24sp"
            android:text="Fail" />

        <Button
            android:id="@+id/button_pass"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_style_3"
            android:textSize="24sp"
            android:text="Pass" />
    </LinearLayout>

</RelativeLayout>