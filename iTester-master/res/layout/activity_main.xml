                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_compass"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style_1"
                    android:text="@string/button_compass"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_gyro"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style_1"
                    android:text="@string/button_gyro"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_prox"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style_1"
                    android:text="@string/button_prox"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_gps"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style_1"
                    android:text="@string/button_gps"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
            </LinearLayout>
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                 <Button
                    android:id="@+id/button_otg"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style_1"
                    android:text="@string/button_otg"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button_ethernet"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style_1"
                    android:text="@string/button_ethernet"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
                <Button
                    android:id="@+id/button_fm"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style_1"
                    android:text="@string/button_fm"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

            </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                 <Button
                    android:id="@+id/button_reset"
                    android:layout_width="0.0dip"
